<div class="cardsContainer flex">
    {% for category in categories %}
        <div class="card "style="width: 18rem;">
            <img class="card-img-top" src="{{ category.picture}}" alt="Category image">
            <div class="card-body">
                <h5 class="card-title">{{ category.title }}</h5>
                <p class="card-text">{{ category.summary }}</p>
                <a href="{{ path('categorie', {id:category.id}) }}" class="btn btn-primary">Voir la cat√©gorie</a>
            </div>
        </div>
    {% endfor %}
</div>